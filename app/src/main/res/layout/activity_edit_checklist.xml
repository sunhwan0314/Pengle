<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- ✏️ 항목 입력 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="새 항목 입력">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextChecklistItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ➕ 추가 버튼 -->
        <Button
            android:id="@+id/btnAddChecklistItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추가"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white" />

        <!-- 💡 추천 안내 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이런 항목은 어떤가요?"
            android:textColor="#555555"
            android:layout_marginTop="24dp"
            android:textSize="14sp" />

        <!-- 추천 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnRecom1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="형광등 끄기"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnRecom2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="콘센트 뽑기"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnRecom3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TV 전원 차단"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnRecom4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="대중교통 이용"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>

        <!-- 📋 체크리스트 목록 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

<!--            <ListView-->
<!--                android:id="@+id/listViewChecklist"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:dividerHeight="3dp"-->
<!--                android:padding="64dp" />-->

            <ListView
                android:id="@+id/listViewChecklist"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:dividerHeight="1dp"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>