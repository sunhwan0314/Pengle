<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF9FF"

    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 정보"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/imageViewProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/background"
                android:src="@drawable/userdefault" android:contentDescription="사용자 프로필 사진" />

            <ImageView
                android:id="@+id/imageViewChangeProfilePicture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:src="@drawable/camera"
                android:background="@drawable/bg_rounded_white" android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="프로필 사진 변경" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="새 닉네임을 입력하세요"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:padding="12dp"
            android:background="@drawable/edittext_border" android:textColor="#333333"
            android:textColorHint="#AAAAAA"
            android:autofillHints="nickname" />
        <Button
            android:id="@+id/buttonSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="변경 사항 저장"
            android:textSize="18sp"
            android:backgroundTint="#CDEEF7"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>