<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friend_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EAF9FF"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 친구"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFriendList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_friend_search_result" />

    <TextView
        android:id="@+id/textViewEmptyFriendList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="친구가 없습니다."
        android:textSize="16sp"
        android:textColor="#757575"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonGoToSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="친구 검색"
        android:textSize="18sp"
        android:backgroundTint="#CDEEF7"
        android:textColor="#FFFFFF" />
    <Button
        android:id="@+id/buttonGoToRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="내게 온 요청 목록"
        android:textSize="18sp"
        android:backgroundTint="#CDEEF7"
        android:textColor="#FFFFFF" />


</LinearLayout>